<!--This is a template for a dish, displayed on the dishes.ejs page-->
<!--for every dish in allDishes, I want to loop and I do this with arrayNumber, which is a number-->
<% for (let arrayNumber = 0; arrayNumber < allDishes.length; arrayNumber++) { %>
<a href="/dish/<%=allDishes[arrayNumber]._id%>">

  <article>

    <form action="/favoriteDish" method="post">
  
      <% if(allDishes.like==true){ %>

        <button name="like" type="submit" value="">
            <img src="images/hartje.png" id="emptyHeart" alt="likeButton">
        </button>

      <% } else{ %>

        <button name="like" type="submit" value="">
          <img src="images/roodHartje.png" id="emptyHeart" alt="likeButton">
        </button>

      <%} %>

    </form>
    
    <div class="dishText">

      <h3><%=allDishes[arrayNumber].name %></h3>
      <p><%=allDishes[arrayNumber].tags %></p>
      <p class="qualityText">Quality: <%=allDishes[arrayNumber].quality %></p>
    </div>

    <div class="dishImage">
      <img src="static/images/<%= allDishes[arrayNumber].img %>" alt="" />
    </div>

  </article>
</a>
<% } %>
